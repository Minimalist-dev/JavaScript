#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app     = require('../app');
var debug   = require('debug')('javascript:server');
var http    = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

const server        = http.createServer(app);
const { Server }    = require("socket.io");
const io            = new Server(server);
//const io = require('socket.io')(server);
/**
 * Listen on provided port, on all network interfaces.
 */

/* Chat
--------------------------------------------------------------------------------*/
////let emitirConexion      = { estado: 'Conectado'     };
//let emitirDesconexion   = { estado: 'Desconectado'  };
//
//io.on('connection', function(socket) {
////    console.log('a user connected', socket.id);
////    io.emit('chat message', emitirConexion);
//    socket.on('disconnect', function() {//console.log('user disconnected');  
//        io.emit('chat message', emitirDesconexion);
//    });
//    
//    socket.on('chat message', function(emitir) {//console.log(emitir);
//        io.emit('chat message', emitir);
//    });
//});

/* Video Chat
--------------------------------------------------------------------------------*/
io.on('connection', function(socket) {
    socket.on('join-room', function(salaID, usuarioID, nombre) {
        socket.join(salaID);
        //socket.to(salaID) excluye al remitente.
        socket.to(salaID).emit('user-connected', usuarioID);
//        socket.broadcast.emit('user-connected', usuarioID);

        socket.on('message', function(mensaje) {
//            io.to(salaID).emit('createMessage', message, nombre);
            io.emit('createMessage', nombre, mensaje);
        });
        
        socket.on('disconnect', function() {
            console.log('Disconnect: ', usuarioID);
            socket.to(salaID).emit('user-disconnected', usuarioID);
//            socket.broadcast.emit('user-disconnected', usuarioID);
        });
    });
});


server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
    var port = parseInt(val, 10);

    if (isNaN(port)) {
        // named pipe
        return val;
    }

    if (port >= 0) {
        // port number
        return port;
    }

    return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
    if (error.syscall !== 'listen') {
        throw error;
    }

    var bind = typeof port === 'string'
            ? 'Pipe ' + port
            : 'Port ' + port;

    // handle specific listen errors with friendly messages
    switch (error.code) {
        case 'EACCES':
            console.error(bind + ' requires elevated privileges');
            process.exit(1);
            break;
        case 'EADDRINUSE':
            console.error(bind + ' is already in use');
            process.exit(1);
            break;
        default:
            throw error;
    }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
    var addr = server.address();
    var bind = typeof addr === 'string'
            ? 'pipe ' + addr
            : 'port ' + addr.port;
    debug('Listening on ' + bind);
}
